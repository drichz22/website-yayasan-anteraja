---
import hero1 from "../../../shared/assets/Hero-1.jpg";
import hero2 from "../../../shared/assets/Hero-2.jpg";
import { Image } from "astro:assets";
---

<style>
    .gradient-mesh {
        background-color: #f8fafc;
        background-image: radial-gradient(at 0% 0%, hsla(199, 89%, 48%, 0.15) 0, transparent 50%),
                          radial-gradient(at 50% 0%, hsla(330, 81%, 60%, 0.1) 0, transparent 50%)
    };
</style>

<section id="hero" class="gradient-mesh mt-16 p-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Hero Fonts -->
            <div class="space-y-8">
                <!-- Badge -->
                <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-brand-primary/10 text-secondary font-bold text-xs tracking-wide uppercase">
                    <span class="relative flex h-2 w-2">
                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-brand-primary opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-2 w-2 bg-brand-primary"></span>
                    </span>
                        Bantuan Aktif
                </div>
                <h1 class="text-5xl lg:text-6xl font-extrabold leading-tight tracking-tight">
                    Membantu Saudara Kita di <span class="text-brand-primary italic">Sumatra</span>
                    <span class="block text-2xl lg:text-3xl text-slate-500 mt-2 font-bold">Ratusan Ribu Korban Masih Tertahan di Pengungsian</span>
                </h1>                                                                   
                <p class="text-lg text-slate-600 dark:text-slate-400 max-w-xl leading-relaxed">
                    Bergabunglah bersama Yayasan Amanah Satria Indonesia dalam memberikan bantuan segera dan pemulihan jangka panjang bagi keluarga yang terdampak banjir bandang di Aceh, Sumatera Utara, dan Sumatera Barat.
                </p>
            </div>   
            <!-- Picture -->
            <div class="relative">
                <div class="absolute -top-10 -left-10 w-80 h-80 bg-teal/20 rounded-full blur-3xl -z-10"></div>
                    <div class="absolute -bottom-10 -right-10 w-72 h-72 bg-secondary/10 rounded-full blur-3xl -z-10"></div>
                    <div class="grid grid-cols-2 gap-4">
                        <Image src={hero1} alt="Donation" class="rounded-3xl shadow-2xl mt-8"/>
                        <Image src={hero2} alt="Flood Illustration" class="rounded-3xl shadow-2xl"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
